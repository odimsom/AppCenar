<div class="p-6 max-w-4xl mx-auto text-white">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-petrel">Eliminar producto</h1>
    <a
      href="/comercio/productos"
      class="btn bg-petrel hover:bg-bluedart text-white rounded-lg py-2 px-4 flex items-center gap-2"
    >
      <i class="fa fa-arrow-left"></i> Volver
    </a>
  </div>

  <div class="bg-benthic rounded-xl shadow-lg p-6 space-y-4">
    <h2 class="text-xl font-semibold text-red-400">
      ¿Estás seguro de que deseas eliminar este producto?
    </h2>

    <div class="flex items-center gap-4">
      <img
        src="<%= producto.imagen %>"
        alt="<%= producto.nombre %>"
        class="rounded-lg object-cover"
        style="max-height: 100px; width: 100px"
      />
      <div>
        <h6 class="text-lg font-semibold"><%= producto.nombre %></h6>
        <p class="text-bluedart font-bold">
          RD$ <%= producto.precio.toFixed(2) %>
        </p>
      </div>
    </div>

    <div class="bg-yellow-700/30 border border-yellow-600 rounded-lg p-4">
      <p><%= producto.descripcion %></p>
    </div>

    <p class="text-red-400 font-semibold">Esta acción no se puede deshacer.</p>

    <form
      action="/comercio/productos/eliminar/<%= producto.id %>"
      method="POST"
      class="flex justify-between"
    >
      <a
        href="/comercio/productos"
        class="py-3 px-6 rounded-lg bg-petrel hover:bg-bluedart text-white font-semibold transition"
        >Cancelar</a
      >
      <button
        type="submit"
        class="py-3 px-6 rounded-lg bg-red-700 hover:bg-red-800 text-white font-bold transition"
      >
        Eliminar producto
      </button>
    </form>
  </div>
</div>

<style>
  .bg-benthic {
    background-color: #151e27;
  }
  .text-petrel {
    color: #264653;
  }
  .bg-petrel {
    background-color: #264653;
  }
  .bg-bluedart {
    color: #2a9d8f;
  }
  .bg-bluedart-bg {
    background-color: #2a9d8f;
  }
  .hover\:bg-bluedart:hover {
    background-color: #2a9d8f;
  }
  .hover\:bg-petrel:hover {
    background-color: #264653;
  }
</style>
