<div class="p-6 max-w-5xl mx-auto text-white">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-petrel">Perfil del comercio</h1>
    <a
      href="/comercio/home"
      class="btn bg-petrel hover:bg-bluedart text-white rounded-lg py-2 px-4 flex items-center gap-2"
    >
      <i class="fa fa-arrow-left"></i> Volver
    </a>
  </div>

  <div class="flex flex-col md:flex-row gap-6">
    <!-- Logo e info -->
    <div
      class="md:w-1/3 bg-benthic rounded-xl shadow-lg p-6 flex flex-col items-center"
    >
      <% if (comercio.logo) { %>
      <img
        src="<%= comercio.logo %>"
        alt="<%= comercio.nombre %>"
        class="mb-4 rounded-lg max-w-[150px] max-h-[150px] object-contain"
      />
      <% } else { %>
      <div
        class="bg-gray-700 text-white flex items-center justify-center mb-4 rounded-lg w-[150px] h-[150px]"
      >
        <i class="fa fa-store fa-4x"></i>
      </div>
      <% } %>
      <h4 class="text-xl font-semibold mb-1"><%= comercio.nombre %></h4>
      <p class="text-gray-400 mb-2"><%= comercio.correo %></p>
      <p class="flex items-center gap-2 mb-1">
        <i class="fa fa-phone"></i> <%= comercio.telefono %>
      </p>
      <p class="flex items-center gap-2">
        <i class="fa fa-clock"></i> <%= comercio.horaApertura %> - <%=
        comercio.horaCierre %>
      </p>
    </div>

    <!-- Formulario de edición -->
    <div class="md:w-2/3 bg-benthic rounded-xl shadow-lg p-6">
      <h5 class="text-xl font-semibold text-petrel mb-4">Editar información</h5>
      <form
        action="/comercio/perfil"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-4"
      >
        <div>
          <label
            for="telefono"
            class="block text-sm font-medium text-gray-300 mb-1"
            >Teléfono</label
          >
          <input
            type="text"
            id="telefono"
            name="telefono"
            value="<%= comercio.telefono %>"
            required
            class="w-full rounded-lg border border-petrel bg-transparent text-white p-3 focus:outline-none focus:ring-2 focus:ring-bluedart"
          />
        </div>

        <div>
          <label
            for="correo"
            class="block text-sm font-medium text-gray-300 mb-1"
            >Correo electrónico</label
          >
          <input
            type="email"
            id="correo"
            name="correo"
            value="<%= comercio.correo %>"
            required
            class="w-full rounded-lg border border-petrel bg-transparent text-white p-3 focus:outline-none focus:ring-2 focus:ring-bluedart"
          />
        </div>

        <div class="flex gap-4">
          <div class="flex-1">
            <label
              for="horaApertura"
              class="block text-sm font-medium text-gray-300 mb-1"
              >Hora de apertura</label
            >
            <input
              type="time"
              id="horaApertura"
              name="horaApertura"
              value="<%= comercio.horaApertura %>"
              required
              class="w-full rounded-lg border border-petrel bg-transparent text-white p-3 focus:outline-none focus:ring-2 focus:ring-bluedart"
            />
          </div>
          <div class="flex-1">
            <label
              for="horaCierre"
              class="block text-sm font-medium text-gray-300 mb-1"
              >Hora de cierre</label
            >
            <input
              type="time"
              id="horaCierre"
              name="horaCierre"
              value="<%= comercio.horaCierre %>"
              required
              class="w-full rounded-lg border border-petrel bg-transparent text-white p-3 focus:outline-none focus:ring-2 focus:ring-bluedart"
            />
          </div>
        </div>

        <div>
          <label
            for="logo"
            class="block text-sm font-medium text-gray-300 mb-1"
            >Logo del comercio</label
          >
          <input
            type="file"
            id="logo"
            name="logo"
            class="w-full rounded-lg border border-petrel bg-transparent text-white p-3 focus:outline-none focus:ring-2 focus:ring-bluedart"
          />
          <small class="text-gray-400"
            >Deja este campo vacío si no deseas cambiar tu logo actual.</small
          >
        </div>

        <button
          type="submit"
          class="w-full py-3 rounded-lg bg-bluedart hover:bg-petrel text-white font-semibold transition"
        >
          Actualizar perfil
        </button>
      </form>
    </div>
  </div>
</div>

<style>
  .bg-benthic {
    background-color: #151e27;
  }
  .text-petrel {
    color: #264653;
  }
  .bg-petrel {
    background-color: #264653;
  }
  .bg-bluedart {
    background-color: #2a9d8f;
  }
  .hover\:bg-bluedart:hover {
    background-color: #2a9d8f;
  }
  .hover\:bg-petrel:hover {
    background-color: #264653;
  }
</style>
