<h2 class="auth-title">Registro de Cliente</h2>

<form action="/register-client" method="POST" class="auth-form needs-validation" enctype="multipart/form-data" novalidate>
  <div class="form-group">
    <label for="name">Nombre</label>
    <div class="input-with-icon">
      <i class="fas fa-user"></i>
      <input type="text" id="name" name="name" placeholder="Tu nombre" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="lastName">Apellido</label>
    <div class="input-with-icon">
      <i class="fas fa-user"></i>
      <input type="text" id="lastName" name="lastName" placeholder="Tu apellido" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="phone">Teléfono</label>
    <div class="input-with-icon">
      <i class="fas fa-phone"></i>
      <input type="text" id="phone" name="phone" placeholder="Tu teléfono" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="email">Correo electrónico</label>
    <div class="input-with-icon">
      <i class="fas fa-envelope"></i>
      <input type="email" id="email" name="email" placeholder="tu@email.com" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="username">Nombre de usuario (opcional)</label>
    <div class="input-with-icon">
      <i class="fas fa-at"></i>
      <input type="text" id="username" name="username" placeholder="username">
    </div>
  </div>
  
  <div class="form-group">
    <label for="role">Tipo de cuenta</label>
    <div class="input-with-icon">
      <i class="fas fa-user-tag"></i>
      <select id="role" name="role" required>
        <option value="client">Cliente</option>
        <option value="delivery">Delivery</option>
      </select>
    </div>
  </div>
  
  <div class="form-group">
    <label for="password">Contraseña</label>
    <div class="input-with-icon">
      <i class="fas fa-lock"></i>
      <input type="password" id="password" name="password" placeholder="••••••••" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="confirmPassword">Confirmar contraseña</label>
    <div class="input-with-icon">
      <i class="fas fa-lock"></i>
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder="••••••••" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="profileImage">Foto de perfil (opcional)</label>
    <div class="file-upload">
      <i class="fas fa-cloud-upload-alt"></i>
      <p>Haz clic o arrastra una imagen aquí</p>
      <input type="file" id="profileImage" name="profileImage" accept="image/*">
    </div>
    <img id="profileImage-preview" src="#" alt="Vista previa" style="display: none; max-width: 100%; max-height: 200px; margin-top: 10px;">
  </div>
  
  <button type="submit" class="btn btn-primary">Registrarse</button>
</form>

<div class="auth-links">
  <p>¿Ya tienes una cuenta? <a href="/login" class="forgot-password">Iniciar sesión</a></p>
</div>