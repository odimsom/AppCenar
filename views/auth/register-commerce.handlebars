<h2 class="auth-title">Registro de Comercio</h2>

<form action="/register-commerce" method="POST" class="auth-form needs-validation" enctype="multipart/form-data" novalidate>
  <div class="form-group">
    <label for="name">Nombre del comercio</label>
    <div class="input-with-icon">
      <i class="fas fa-store"></i>
      <input type="text" id="name" name="name" placeholder="Nombre de tu comercio" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="phone">Teléfono</label>
    <div class="input-with-icon">
      <i class="fas fa-phone"></i>
      <input type="text" id="phone" name="phone" placeholder="Teléfono del comercio" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="email">Correo electrónico</label>
    <div class="input-with-icon">
      <i class="fas fa-envelope"></i>
      <input type="email" id="email" name="email" placeholder="comercio@email.com" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="commerceTypeId">Tipo de comercio</label>
    <div class="input-with-icon">
      <i class="fas fa-tag"></i>
      <select id="commerceTypeId" name="commerceTypeId" required>
        <option value="">Selecciona un tipo</option>
        {{#each commerceTypes}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  
  <div class="form-group">
    <label>Horario de atención</label>
    <div class="time-inputs">
      <div class="form-group">
        <label for="openingTime">Apertura</label>
        <div class="input-with-icon">
          <i class="fas fa-clock"></i>
          <input type="time" id="openingTime" name="openingTime" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="closingTime">Cierre</label>
        <div class="input-with-icon">
          <i class="fas fa-clock"></i>
          <input type="time" id="closingTime" name="closingTime" required>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <label for="password">Contraseña</label>
    <div class="input-with-icon">
      <i class="fas fa-lock"></i>
      <input type="password" id="password" name="password" placeholder="••••••••" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="confirmPassword">Confirmar contraseña</label>
    <div class="input-with-icon">
      <i class="fas fa-lock"></i>
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder="••••••••" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="logo">Logo del comercio (opcional)</label>
    <div class="file-upload">
      <i class="fas fa-cloud-upload-alt"></i>
      <p>Haz clic o arrastra una imagen aquí</p>
      <input type="file" id="logo" name="logo" accept="image/*">
    </div>
    <img id="logo-preview" src="#" alt="Vista previa" style="display: none; max-width: 100%; max-height: 200px; margin-top: 10px;">
  </div>
  
  <button type="submit" class="btn btn-primary">Registrar Comercio</button>
</form>

<div class="auth-links">
  <p>¿Ya tienes una cuenta? <a href="/login" class="forgot-password">Iniciar sesión</a></p>
</div>