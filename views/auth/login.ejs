<div class="flex justify-center items-center min-h-screen bg-kuretake px-4">
  <!-- Imagen alineada al card -->
  <div class="hidden md:block w-1/2">
    <div class="flex justify-end">
      <div
        class="relative w-[500px] h-[650px] overflow-hidden rounded-l-2xl rounded-r-none"
      >
        <img
          src="/img/login.png"
          alt="Imagen bienvenida"
          class="object-cover w-full h-full"
        />
        <div
          class="absolute inset-y-0 right-0 w-28 bg-gradient-to-l from-benthic/80 to-transparent z-10"
        ></div>
      </div>
    </div>
  </div>

  <!-- Card de login pegado sin separación -->
  <div class="flex w-full md:w-1/2 justify-start">
    <div
      class="w-[500px] h-[650px] bg-benthic/70 text-white rounded-r-2xl rounded-l-none shadow-2xl p-10 backdrop-blur-lg border border-petrel/20 flex flex-col justify-center"
    >
      <h2 class="text-4xl font-bold text-petrel text-center mb-8">
        Iniciar sesión
      </h2>
      <form
        action="/auth/login"
        method="POST"
        class="space-y-6"
      >
        <div>
          <label
            for="correo"
            class="block text-sm font-medium mb-2"
            >Correo o usuario</label
          >
          <input
            type="text"
            id="correo"
            name="correo"
            required
            class="w-full px-4 py-3 rounded-xl bg-kuretake/50 text-white placeholder-gray-400 border-2 border-petrel/40 focus:ring-2 focus:ring-petrel focus:border-petrel outline-none transition backdrop-blur-sm"
          />
        </div>
        <div>
          <label
            for="password"
            class="block text-sm font-medium mb-2"
            >Contraseña</label
          >
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-4 py-3 rounded-xl bg-kuretake/50 text-white placeholder-gray-400 border-2 border-petrel/40 focus:ring-2 focus:ring-petrel focus:border-petrel outline-none transition backdrop-blur-sm"
          />
        </div>
        <button
          type="submit"
          class="w-full py-3 bg-petrel text-white font-semibold rounded-xl hover:bg-bluedart transition text-lg"
        >
          Iniciar sesión
        </button>
      </form>
      <div class="mt-8 text-center text-sm text-gray-300 space-y-3">
        <p>¿No tienes una cuenta?</p>
        <a
          href="/auth/registro-cliente-delivery"
          class="block py-3 border-2 border-petrel text-petrel rounded-xl font-semibold hover:bg-petrel hover:text-white transition"
        >
          Registrarse como cliente o delivery
        </a>
        <a
          href="/auth/registro-comercio"
          class="block py-3 border-2 border-green-500 text-green-400 rounded-xl font-semibold hover:bg-green-500 hover:text-white transition"
        >
          Registrar mi comercio
        </a>
        <a
          href="/auth/solicitar-recuperacion"
          class="text-petrel hover:underline block mt-4"
        >
          ¿Olvidaste tu contraseña?
        </a>
      </div>
    </div>
  </div>
</div>
