<div class="container mx-auto mt-10 px-4 max-w-6xl text-white">
  <h1 class="mb-6 text-3xl font-bold text-petrel">Tipos de Comercios</h1>

  <a
    href="/admin/tipos-comercios/crear"
    class="inline-block mb-5 bg-petrel hover:bg-bluedart transition-colors duration-300 px-5 py-2 rounded shadow font-semibold"
  >
    <i class="fa fa-plus me-2"></i> Crear Tipo de Comercio
  </a>

  <% if (tiposComercios.length === 0) { %>
  <div
    class="bg-yellow-600 bg-opacity-20 border border-yellow-500 text-yellow-300 rounded-md p-4"
  >
    No hay tipos de comercio registrados.
  </div>
  <% } else { %>
  <div class="overflow-x-auto rounded-lg shadow-lg bg-benthic">
    <table
      class="min-w-full table-auto border-collapse border border-gray-700 text-white"
    >
      <thead class="bg-kuretake">
        <tr>
          <th class="border border-gray-600 px-4 py-2 text-left">#</th>
          <th class="border border-gray-600 px-4 py-2 text-left">Nombre</th>
          <th class="border border-gray-600 px-4 py-2 text-left">
            Descripci√≥n
          </th>
          <th class="border border-gray-600 px-4 py-2 text-left">
            Comercios Asociados
          </th>
          <th class="border border-gray-600 px-4 py-2 text-left">Icono</th>
          <th class="border border-gray-600 px-4 py-2 text-left">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% tiposComercios.forEach((tipo, index) => { %>
        <tr class="even:bg-kuretake/80 odd:bg-kuretake/50">
          <td class="border border-gray-700 px-4 py-2"><%= index + 1 %></td>
          <td class="border border-gray-700 px-4 py-2"><%= tipo.nombre %></td>
          <td class="border border-gray-700 px-4 py-2">
            <%= tipo.descripcion %>
          </td>
          <td class="border border-gray-700 px-4 py-2">
            <%= tipo.comercios.length %>
          </td>
          <td class="border border-gray-700 px-4 py-2">
            <% if (tipo.icono) { %>
            <img
              src="<%= tipo.icono %>"
              alt="icono"
              class="w-10 h-10 object-contain"
            />
            <% } else { %>
            <span class="text-gray-400">Sin icono</span>
            <% } %>
          </td>
          <td class="border border-gray-700 px-4 py-2 space-x-2">
            <a
              href="/admin/tipos-comercios/editar/<%= tipo.id %>"
              class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded shadow text-sm"
              >Editar</a
            >
            <a
              href="/admin/tipos-comercios/eliminar/<%= tipo.id %>"
              class="inline-block bg-red-700 hover:bg-red-800 text-white px-3 py-1 rounded shadow text-sm"
              >Eliminar</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

  <a
    href="/admin/home"
    class="inline-block mt-6 bg-gray-700 hover:bg-gray-600 text-white px-5 py-2 rounded shadow"
  >
    <i class="fa fa-arrow-left"></i> Volver
  </a>
</div>
