<div class="p-8 bg-kuretake min-h-screen text-white">
  <h1 class="text-4xl font-bold text-petrel mb-8 text-center">
    Listado de Administradores
  </h1>

  <div class="text-center mb-6">
    <a
      href="/admin/administradores/crear"
      class="inline-block bg-petrel text-white font-semibold px-6 py-3 rounded-xl hover:bg-bluedart transition"
    >
      <i class="fa fa-plus mr-2"></i> Crear Administrador
    </a>
  </div>

  <% if (administradores.length === 0) { %>
  <div
    class="bg-yellow-500/20 text-yellow-300 p-4 rounded-lg text-center font-semibold mb-8"
  >
    No hay administradores registrados.
  </div>
  <% } else { %>
  <div class="overflow-x-auto rounded-xl shadow-lg mb-8">
    <table class="min-w-full text-sm text-left bg-benthic/80 rounded-xl">
      <thead class="bg-petrel text-white uppercase text-xs">
        <tr>
          <th class="p-4">#</th>
          <th class="p-4">Nombre</th>
          <th class="p-4">Correo</th>
          <th class="p-4">Usuario</th>
          <th class="p-4">Estado</th>
          <th class="p-4">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-benthic">
        <% administradores.forEach((admin, index) => { %>
        <tr class="hover:bg-benthic/70">
          <td class="p-4"><%= index + 1 %></td>
          <td class="p-4"><%= admin.nombre %> <%= admin.apellido %></td>
          <td class="p-4"><%= admin.correo %></td>
          <td class="p-4"><%= admin.usuario %></td>
          <td class="p-4">
            <% if (admin.activo) { %>
            <span
              class="inline-block px-3 py-1 rounded-full bg-green-500/20 text-green-400 font-semibold text-xs"
              >Activo</span
            >
            <% } else { %>
            <span
              class="inline-block px-3 py-1 rounded-full bg-red-500/20 text-red-400 font-semibold text-xs"
              >Inactivo</span
            >
            <% } %>
          </td>
          <td class="p-4 space-y-2">
            <% if (admin.id != usuarioActual) { %>
            <a
              href="/admin/administradores/editar/<%= admin.id %>"
              class="inline-block w-full text-center px-4 py-2 rounded-lg font-semibold text-sm bg-yellow-600 hover:bg-yellow-700 text-white transition"
            >
              Editar
            </a>
            <a
              href="/admin/administradores/cambiar-estado/<%= admin.id %>"
              class="inline-block w-full text-center px-4 py-2 rounded-lg font-semibold text-sm transition <%= admin.activo ? 'bg-red-600 hover:bg-red-700 text-white' : 'bg-green-600 hover:bg-green-700 text-white' %>"
            >
              <%= admin.activo ? 'Desactivar' : 'Activar' %>
            </a>
            <% } else { %>
            <span class="block text-sm text-gray-400">No disponible</span>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

  <div class="text-center">
    <a
      href="/admin/home"
      class="inline-block bg-petrel text-white font-semibold px-6 py-3 rounded-xl hover:bg-bluedart transition"
    >
      <i class="fa fa-arrow-left"></i> Volver
    </a>
  </div>
</div>
