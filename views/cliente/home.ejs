<div class="p-6 text-white">
  <h1 class="text-3xl font-bold text-petrel mb-6">Bienvenido a AppCenar</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% if (tiposComercio && tiposComercio.length > 0) { %> <%
    tiposComercio.forEach(tipo => { %>
    <div
      class="bg-benthic rounded-xl shadow-md flex flex-col items-center text-center p-6 hover:scale-105 transition transform duration-300"
    >
      <img
        src="<%= tipo.icono %>"
        alt="<%= tipo.nombre %>"
        class="w-24 h-24 mb-4 object-contain rounded-lg shadow"
      />
      <h2 class="text-xl font-bold text-white mb-2"><%= tipo.nombre %></h2>
      <p class="text-gray-300 mb-4"><%= tipo.descripcion %></p>
      <a
        href="/cliente/comercios/<%= tipo.id %>"
        class="w-full bg-petrel hover:bg-bluedart text-white font-semibold py-2 rounded-lg transition"
      >
        Ver comercios
      </a>
    </div>
    <% }); %> <% } else { %>
    <div class="col-span-full">
      <div class="bg-gray-800 text-gray-300 p-6 rounded-lg text-center">
        No hay tipos de comercios disponibles en este momento.
      </div>
    </div>
    <% } %>
  </div>
</div>
