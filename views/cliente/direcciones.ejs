<div class="p-6 text-white">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-petrel">Mis direcciones</h1>
    <div class="flex gap-2">
      <a
        href="/cliente/home"
        class="bg-gray-700 hover:bg-gray-600 text-white font-semibold px-4 py-2 rounded-lg flex items-center gap-2 transition"
      >
        <i class="fa fa-arrow-left"></i> Volver
      </a>
      <a
        href="/cliente/direcciones/crear"
        class="bg-petrel hover:bg-bluedart text-white font-semibold px-4 py-2 rounded-lg flex items-center gap-2 transition"
      >
        <i class="fa fa-plus"></i> Nueva dirección
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% if (direcciones && direcciones.length > 0) { %> <%
    direcciones.forEach(direccion => { %>
    <div
      class="bg-benthic rounded-lg p-6 shadow flex flex-col justify-between h-full"
    >
      <div>
        <h2 class="text-xl font-bold mb-2 text-white">
          <%= direccion.nombre %>
        </h2>
        <p class="text-gray-300"><%= direccion.descripcion %></p>
      </div>
      <div class="flex justify-between mt-4 gap-2">
        <a
          href="/cliente/direcciones/editar/<%= direccion.id %>"
          class="bg-petrel hover:bg-bluedart text-white px-3 py-2 rounded-lg text-sm flex items-center gap-2 transition w-1/2 justify-center"
        >
          <i class="fa fa-edit"></i> Editar
        </a>
        <a
          href="/cliente/direcciones/eliminar/<%= direccion.id %>"
          class="bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-lg text-sm flex items-center gap-2 transition w-1/2 justify-center"
        >
          <i class="fa fa-trash"></i> Eliminar
        </a>
      </div>
    </div>
    <% }); %> <% } else { %>
    <div
      class="col-span-full bg-benthic rounded-lg p-6 shadow text-center text-gray-300"
    >
      No tienes direcciones registradas. Agrega una nueva dirección para tus
      pedidos.
    </div>
    <% } %>
  </div>
</div>
