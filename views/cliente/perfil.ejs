<div class="p-6 text-white max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-petrel">Mi perfil</h1>
    <a
      href="/cliente/home"
      class="btn bg-benthic hover:bg-bluedart text-white rounded-lg py-2 px-4 transition"
    >
      <i class="fa fa-arrow-left me-2"></i> Volver
    </a>
  </div>

  <div class="flex flex-col md:flex-row gap-6">
    <div class="bg-benthic rounded-xl shadow-lg p-6 flex flex-col items-center">
      <% if (usuario.foto) { %>
      <img
        src="<%= usuario.foto %>"
        alt="<%= usuario.nombre %>"
        class="rounded-full mb-4 w-36 h-36 object-cover border-4 border-petrel"
      />
      <% } else { %>
      <div
        class="rounded-full bg-gray-700 text-gray-300 flex items-center justify-center mb-4 w-36 h-36"
      >
        <i class="fa fa-user fa-5x"></i>
      </div>
      <% } %>
      <h3 class="text-xl font-semibold">
        <%= usuario.nombre %> <%= usuario.apellido %>
      </h3>
      <p class="text-gray-400"><%= usuario.correo %></p>
      <p class="mt-2">
        <i class="fa fa-phone me-2"></i> <%= usuario.telefono %>
      </p>
    </div>

    <div class="bg-benthic rounded-xl shadow-lg flex-1 p-6">
      <h2 class="text-xl font-semibold mb-6 border-b border-petrel pb-2">
        Editar información
      </h2>
      <form
        action="/cliente/perfil"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-5"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label
              for="nombre"
              class="block mb-1 font-medium"
              >Nombre</label
            >
            <input
              type="text"
              id="nombre"
              name="nombre"
              value="<%= usuario.nombre %>"
              required
              class="w-full rounded-lg bg-gray-800 border border-gray-600 px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-bluedart"
            />
          </div>
          <div>
            <label
              for="apellido"
              class="block mb-1 font-medium"
              >Apellido</label
            >
            <input
              type="text"
              id="apellido"
              name="apellido"
              value="<%= usuario.apellido %>"
              required
              class="w-full rounded-lg bg-gray-800 border border-gray-600 px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-bluedart"
            />
          </div>
        </div>

        <div>
          <label
            for="telefono"
            class="block mb-1 font-medium"
            >Teléfono</label
          >
          <input
            type="text"
            id="telefono"
            name="telefono"
            value="<%= usuario.telefono %>"
            required
            class="w-full rounded-lg bg-gray-800 border border-gray-600 px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-bluedart"
          />
        </div>

        <div>
          <label
            for="foto"
            class="block mb-1 font-medium"
            >Foto de perfil</label
          >
          <input
            type="file"
            id="foto"
            name="foto"
            accept="image/*"
            class="w-full text-gray-300 bg-gray-800 rounded-lg border border-gray-600 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-bluedart"
          />
          <small class="text-gray-400"
            >Deja este campo vacío si no deseas cambiar tu foto actual.</small
          >
        </div>

        <button
          type="submit"
          class="w-full bg-petrel hover:bg-bluedart transition text-white font-semibold py-3 rounded-lg"
        >
          Actualizar perfil
        </button>
      </form>
    </div>
  </div>
</div>
